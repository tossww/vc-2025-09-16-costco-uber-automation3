# Copy this file to .env and fill in your values

# Encryption Master Key - Use a strong, unique password
MASTER_KEY=your_master_encryption_key_here
SALT=unique_salt_for_key_derivation

# Scheduling Configuration
SCHEDULING_ENABLED=true
CRON_EXPRESSION=0 10 * * 0  # Sunday at 10 AM
TIMEZONE=America/Los_Angeles
MAX_RETRIES=3
RETRY_BACKOFF=2

# Costco Configuration
COSTCO_BASE_URL=https://www.costco.com
PRODUCT_SEARCH_TERMS=uber eats gift card
BROWSER_TIMEOUT=30000
BROWSER_HEADLESS=false  # Set to true for production

# Email Monitoring
EMAIL_PROVIDER=gmail  # or imap
EMAIL_CHECK_INTERVAL=300000  # 5 minutes
EMAIL_FROM_FILTER=costco@costco.com,noreply@costco.com
EMAIL_SUBJECT_FILTER=order confirmation,gift card
EMAIL_KEYWORDS=uber,gift card,code

# Uber Configuration
UBER_BASE_URL=https://www.ubereats.com
UBER_REDEMPTION_PATH=/eats/gift-cards/redeem
UBER_TIMEOUT=30000

# Notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#automation
SLACK_ENABLED=false

DISCORD_WEBHOOK_URL=
DISCORD_ENABLED=false

NOTIFICATION_EMAILS=
EMAIL_NOTIFICATIONS=false

# Logging
LOG_LEVEL=info
NODE_ENV=development