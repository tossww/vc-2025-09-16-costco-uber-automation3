# Costco Account
COSTCO_EMAIL=your-costco-email@example.com
COSTCO_PASSWORD=your-costco-password

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Email Configuration (IMAP Alternative)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-specific-password

# Uber Account
UBER_EMAIL=your-uber-email@example.com
UBER_PASSWORD=your-uber-password

# Schedule Configuration
PURCHASE_DAY=MONDAY  # Day of week to purchase
PURCHASE_HOUR=9      # Hour (0-23) to attempt purchase
PURCHASE_MINUTE=0    # Minute to attempt purchase

# Purchase Configuration
GIFT_CARD_AMOUNT=50  # Amount per gift card
QUANTITY_PER_WEEK=1  # Number of packs to purchase

# Notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
NOTIFICATION_EMAIL=

# Database
DATABASE_PATH=./data/automation.db

# Redis (optional, for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
ENCRYPTION_KEY=  # Generate with: openssl rand -hex 32
JWT_SECRET=       # Generate with: openssl rand -hex 32

# Environment
NODE_ENV=development
LOG_LEVEL=info
HEADLESS_BROWSER=false  # Set to true in production